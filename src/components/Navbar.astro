---
const links = [
  { name: "Inicio", href: "#hero" },
  { name: "Problema", href: "#problema" },
  { name: "Soluciones", href: "#solucion" },
  { name: "Proceso", href: "#proceso" },
  { name: "Portafolio", href: "#portafolio" },
  { name: "Contacto", href: "#cta-final" },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="#hero" class="text-2xl font-bold text-blue-600 hover:text-blue-800 transition-colors">
      Zentrix Innovate
    </a>

    <!-- Links + CTA (desktop) -->
    <div class="hidden md:flex items-center gap-12">
      <ul class="flex gap-8 font-medium text-gray-700">
        {links.map((link) => (
          <li>
            <a href={link.href} class="hover:text-blue-600 transition-colors">{link.name}</a>
          </li>
        ))}
      </ul>
      <a href="#cta-final" class="ml-4 px-5 py-2 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition-colors shadow-md">
        Transforma tu negocio
      </a>
    </div>

    <!-- Botón hamburguesa (mobile) -->
    <button id="menu-btn" class="block md:hidden text-gray-700 focus:outline-none cursor-pointer text-2xl">
      ☰
    </button>
  </div>

  <!-- Menú desplegable (mobile) mejorado -->
  <div id="mobile-menu" class="fixed top-0 left-0 w-full h-screen bg-white/95 backdrop-blur-md z-40 transform -translate-x-full transition-transform duration-300 md:hidden flex flex-col items-center justify-center gap-6">
    <!-- Botón cerrar -->
    <button id="menu-close" class="absolute top-6 right-6 text-3xl text-gray-700 cursor-pointer">✕</button>

    {links.map((link) => (
      <a
        href={link.href}
        class="text-xl font-semibold text-gray-800 hover:text-blue-600 transition-colors"
      >
        {link.name}
      </a>
    ))}

    <!-- CTA Button en mobile -->
    <a
      href="#cta-final"
      class="mt-4 px-6 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition-colors shadow-md"
    >
      Transforma tu negocio
    </a>
  </div>
</nav>

<script>
  const btn = document.querySelector("#menu-btn");
  const menu = document.querySelector("#mobile-menu");
  const closeBtn = document.querySelector("#menu-close");
  const mobileLinks = menu?.querySelectorAll("a");

  const toggleMenu = () => {
    if(menu?.classList.contains('-translate-x-full')) {
      menu?.classList.remove('-translate-x-full');
      menu?.classList.add('translate-x-0');
    } else {
      menu?.classList.add('-translate-x-full');
      menu?.classList.remove('translate-x-0');
    }
  }

  btn?.addEventListener("click", toggleMenu);
  closeBtn?.addEventListener("click", toggleMenu);

  // Cerrar al hacer click en cualquier link del menú
  mobileLinks?.forEach(link => {
    link.addEventListener("click", () => {
      menu?.classList.add('-translate-x-full');
      menu?.classList.remove('translate-x-0');
    });
  });
</script>
